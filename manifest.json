{
  "manifest_version": 2,
  "name": "Caliper - track events",
  "version": "0.1.3",
  "description": "Control all tabs and generate Caliper events.",
  "browser_action": {
	  "default_icon": {
      "19": "assets/icon.png",
      "38": "assets/icon@2x.png"
    },
    "default_popup": "views/popup/index.html",
    "default_title": "Caliber event Tabs"
	},
  "permissions": [
    "tabs",
    "activeTab",
    "identity",
    "identity.email",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["caliper-event-model.js","content.js"]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["views/popup/background.js"]
  }
}
